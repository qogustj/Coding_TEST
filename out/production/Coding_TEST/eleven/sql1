SELECT
    ACCOUNT_ID,
    COALESCE(SUM(CASE
        WHEN MONTH(CREATED_AT) = 11 AND CATEGORY = 0 THEN AMOUNT
        WHEN MONTH(CREATED_AT) = 11 AND CATEGORY = 1 THEN -AMOUNT
        ELSE 0
    END), 0) AS BALANCE_CHANGE
FROM
    BANK_TRANSACTION
WHERE
    YEAR(CREATED_AT) = 2022
GROUP BY
    ACCOUNT_ID
ORDER BY
    ACCOUNT_ID ASC